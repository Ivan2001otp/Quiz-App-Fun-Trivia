<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/winner_animation_id"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                app:lottie_rawRes="@raw/winner_animation"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center"
                android:textColor="@color/pale_grey"
                android:textStyle="bold"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Congrats ,You just old your previous high score"
                />

            <Button
                android:id="@+id/Dismiss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DISMISS"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:padding="10dp"
                android:layout_marginBottom="4dp"
                android:textSize="20sp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/round_style"
                android:backgroundTint="@color/pale_yellow"
                />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
